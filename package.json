{
  "name": "bernard-agent",
  "version": "0.3.1",
  "description": "Local CLI AI agent with multi-provider support",
  "main": "dist/index.js",
  "bin": {
    "bernard": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "BERNARD_DEBUG=1 tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"src/**/*.{ts,md}\" \"docs/**/*.{html,css,md}\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,md}\" \"docs/**/*.{html,css,md}\" \"*.md\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phillt/bernard.git"
  },
  "bugs": {
    "url": "https://github.com/phillt/bernard/issues"
  },
  "homepage": "https://phillt.github.io/bernard/",
  "author": "phillt",
  "license": "MIT",
  "keywords": [
    "cli",
    "ai",
    "agent",
    "llm",
    "anthropic",
    "openai",
    "xai",
    "terminal",
    "mcp",
    "ai-sdk"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.0",
    "@ai-sdk/mcp": "^1.0.19",
    "@ai-sdk/openai": "^1.1.0",
    "@ai-sdk/xai": "^1.1.0",
    "ai": "^4.1.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.2.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.0",
    "fastembed": "^2.1.0",
    "node-cron": "^4.2.1",
    "node-notifier": "^10.0.1",
    "turndown": "^7.2.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-notifier": "^8.0.5",
    "@types/turndown": "^5.0.6",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^1.6.1"
  }
}
